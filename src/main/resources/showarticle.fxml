<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.showarticleController">
    <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="400.0" prefWidth="600.0">
        <content>
            <VBox fx:id="postContainer" spacing="20.0" style="-fx-padding: 20px;">
                <!-- Define the card layout for each post -->
                <HBox fx:id="postCard" style="-fx-background-color: #f0f0f0; -fx-padding: 20px; -fx-border-radius: 10px;">
                    <!-- Vertical container for post content -->
                    <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <!-- Label for post description -->
                        <Label fx:id="postContentLabel" prefWidth="400.0" wrapText="true" style="-fx-font-size: 14px;" />

                        <!-- Comment section -->
                        <HBox spacing="10.0">
                            <!-- Text area for entering comment -->
                            <TextArea fx:id="commentTextArea" prefWidth="300.0" promptText="Add a comment..." />
                            <!-- Button for adding comment -->
                            <Button fx:id="addCommentButton" text="Add Comment" onAction="#addCommentButtonClicked" />
                        </HBox>
                    </VBox>
                    <!-- Image view for post image -->
                    <ImageView fx:id="postImageView" fitHeight="150.0" fitWidth="150.0" style="-fx-border-radius: 5px;" />
                </HBox>
            </VBox>
        </content>
    </ScrollPane>
</AnchorPane>
