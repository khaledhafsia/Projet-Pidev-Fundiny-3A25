<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>

<VBox fx:id="reclamation_Vbox" xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.controls.reclamations.CardViewRec" stylesheets="/reclamations/RecCard.css" >
    <children>
        <Label layoutX="29.0" layoutY="50.0" text="Details reclamation:" textFill="DARKTURQUOISE" style="-fx-font-family: 'Verdana Bold'; -fx-font-size: 31.0;" />

        <HBox>
            <VBox spacing="8">
                <Label text="Email:" />
                <Label text="User ID:" />
                <Label text="Project ID:" />
                <Label text="Type ID:" />
                <Label text="Admin ID:" />
                <Label text="Object:" />
                <Label text="Text:" />
            </VBox>

            <VBox spacing="8">
                <Label fx:id="email_card" />
                <Label fx:id="user_id_card" />
                <Label fx:id="project_id_card" />
                <Label fx:id="type_id_card" />
                <Label fx:id="admin_id_card" />
                <Label fx:id="object_card" />
                <Label fx:id="text_card" />
            </VBox>
        </HBox>

        <HBox alignment="CENTER" spacing="25">
            <Button fx:id="delete_button" text="Delete" onAction="#delete_card" style="-fx-font-family: 'Verdana'; -fx-font-size: 14.0;" />
            <Button fx:id="update_button" text="Update" onAction="#update_card" style="-fx-font-family: 'Verdana'; -fx-font-size: 14.0;" />
            <Button fx:id="cancel_button" text="Cancel" onAction="#cancel" style="-fx-font-family: 'Verdana'; -fx-font-size: 14.0;" />

        </HBox>
    </children>
</VBox>
